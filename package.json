{
  "name": "safe-data",
  "version": "1.0.1",
  "description": "A simple schema-based validation library for typescript and javascript.",
  "homepage": "https://github.com/alexzimakov/safe-data#readme",
  "license": "MIT",
  "type": "module",
  "engines": {
    "node": ">=14.16"
  },
  "exports": {
    ".": {
      "import": "./esm/index.js",
      "require": "./cjs/index.js"
    }
  },
  "files": [
    "./esm",
    "./cjs"
  ],
  "main": "./cjs/index.js",
  "types": "./cjs/index.d.ts",
  "scripts": {
    "prepare": "husky install",
    "preversion": "npm run build",
    "lint": "eslint '**/*.{js,ts}'",
    "check-types": "tsc --p tsconfig.json --noEmit",
    "test": "vitest run",
    "coverage": "vitest run --coverage",
    "prebuild": "npm run lint && npm run coverage",
    "build": "npm run build-esm && npm run build-cjs",
    "build-esm": "node scripts/rm.js esm && npx tsc --p tsconfig.json",
    "build-cjs": "node scripts/rm.js cjs && npx tsc --p tsconfig.cjs.json"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/alexzimakov/safe-data.git"
  },
  "bugs": {
    "url": "https://github.com/alexzimakov/safe-data/issues"
  },
  "author": {
    "name": "Alexander Zimakov",
    "email": "alexzmdev@gmail.com"
  },
  "keywords": [
    "schema",
    "validate",
    "parse",
    "check",
    "typescript",
    "type",
    "inference"
  ],
  "lint-staged": {
    "*.ts": "eslint --fix"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "5.48.1",
    "@typescript-eslint/parser": "5.48.1",
    "@vitest/coverage-c8": "0.27.1",
    "eslint": "8.31.0",
    "husky": "8.0.3",
    "lint-staged": "13.1.0",
    "typescript": "4.9.4",
    "vitest": "0.27.1"
  }
}
